<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signUp_scrollView_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/signUp_relativeLayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/signUp_userData_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUp_logo_id"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/signUp_descrizioneEmail_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/signUp_emailField_id"
                android:text="@string/signUp_email_description_text"
                android:textColor="@color/neroPiscacchia" />

            <EditText
                android:id="@+id/signUp_emailField_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUp_descrizioneEmail_id"
                android:layout_marginTop="8dp"
                android:autofillHints="@string/signUp_emailField_text"
                android:background="@drawable/login_edit_text_shape"
                android:ems="10"
                android:hint="@string/signUp_emailField_text"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <TextView
                android:id="@+id/signUp_descrizionePassword_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUp_emailField_id"
                android:layout_alignStart="@id/signUp_emailField_id"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="15dp"
                android:text="@string/signUp_password_description_text"
                android:textColor="@color/neroPiscacchia" />


            <EditText
                android:id="@+id/signUp_passwordField_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUp_descrizionePassword_id"
                android:layout_marginTop="8dp"
                android:autofillHints="@string/signUp_passwordField_text"
                android:background="@drawable/login_edit_text_shape"
                android:ems="10"
                android:hint="@string/signUp_passwordField_text"
                android:inputType="textPassword"
                android:padding="10dp" />

            <TextView
                android:id="@+id/signUp_descrizioneCpassword_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUp_passwordField_id"
                android:layout_alignStart="@id/signUp_emailField_id"
                android:layout_marginTop="15dp"
                android:text="@string/signUp_Cpassword_description_text"
                android:textColor="@color/neroPiscacchia" />

            <EditText
                android:id="@+id/signUp_CpasswordField_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUp_descrizioneCpassword_id"
                android:layout_marginTop="8dp"
                android:autofillHints="@string/signUp_CpasswordField_text"
                android:background="@drawable/login_edit_text_shape"
                android:ems="10"
                android:hint="@string/signUp_CpasswordField_text"
                android:inputType="textPassword"
                android:padding="10dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/signUp_logo_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/appLogo"
            app:srcCompat="@drawable/ic_logo_parking" />

        <TextView
            android:id="@+id/signUp_yesAccount_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUp_userData_id"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@id/signUp_accedi_id"
            android:text="@string/signUp_yesAccount_description_text"
            android:textColor="@color/neroPiscacchia" />

        <TextView
            android:id="@+id/signUp_accedi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/signUp_yesAccount_id"
            android:layout_alignEnd="@id/signUp_userData_id"
            android:onClick="goToLogin"
            android:text="@string/signUp_accedi_description_text"
            android:textColor="@color/gialloPiscacchia" />

        <Button
            android:id="@+id/signUp_registrati_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUp_yesAccount_id"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/confirm_button"
            android:onClick="signup"
            android:padding="15dp"
            android:text="@string/signUp_registrati_button_description_text" />

    </RelativeLayout>
</ScrollView>
