<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panel_view_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gialloMain">

    <TextView
        android:id="@+id/panel_station_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/panel_station"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/panel_street_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/panel_street"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panel_station_id" />

    <TextView
        android:id="@+id/panel_distance_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_distance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/panel_image_park_id"
        app:layout_constraintTop_toBottomOf="@+id/panel_street_id" />

    <TextView
        android:id="@+id/panel_price_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panel_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/panel_image_park_id"
        app:layout_constraintTop_toBottomOf="@+id/panel_distance_id" />

    <ImageView
        android:id="@+id/panel_image_park_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/panel_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/panel_street_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panel_street_id"
        app:srcCompat="@drawable/ic_logo_withname" />

    <Button
        android:id="@+id/panel_button_reservation_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBookStation"
        android:text="@string/panel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/panel_image_park_id"
        app:layout_constraintTop_toBottomOf="@+id/panel_price_id" />
</androidx.constraintlayout.widget.ConstraintLayout>