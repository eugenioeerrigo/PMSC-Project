<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/LOGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="LOGO"
        android:text="LOGO" />

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="appLogo"
        app:srcCompat="@drawable/download" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/email_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_description" />

        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="email"
            android:ems="10"
            android:hint="@string/email_id_text"
            android:inputType="textEmailAddress"
            android:text="@string/email_id_text" />

        <TextView
            android:id="@+id/password_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_description" />

        <EditText
            android:id="@+id/password_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="password"
            android:ems="10"
            android:hint="@string/password_id_text"
            android:inputType="textPassword"
            android:text="@string/password_id_text" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/loginCheckbox_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginCheckBox_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginText_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginText_text" />

        <TextView
            android:id="@+id/loginRegistrationText_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loginRegistrationText_text" />
    </LinearLayout>

    <Button
        android:id="@+id/loginButton_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loginButton_text" />
</LinearLayout>



