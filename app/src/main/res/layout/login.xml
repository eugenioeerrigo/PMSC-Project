<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signUp_scrollView_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backround_main"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_emailField_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_logo_id"
            android:layout_centerInParent="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="email"
            android:background="@drawable/textview_insert_data"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:ems="10"
            android:hint="@string/login_emailField_text"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <EditText
            android:id="@+id/login_passwordField_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_emailField_id"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:autofillHints="password"
            android:background="@drawable/textview_insert_data"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:ems="10"
            android:hint="@string/login_passwordField_text"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/neroPiscacchia" />

        <ImageView
            android:id="@+id/login_logo_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/appLogo"
            app:srcCompat="@drawable/ic_logo_parking" />

        <CheckBox
            android:id="@+id/login_ricordami_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_passwordField_id"
            android:layout_alignStart="@id/login_emailField_id"
            android:layout_centerInParent="true"
            android:text="@string/login_ricordami_description_text"
            android:textColor="@color/neroPiscacchia" />

        <TextView
            android:id="@+id/login_passwordDimenticata_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_passwordField_id"
            android:layout_alignBaseline="@id/login_ricordami_id"
            android:layout_alignEnd="@id/login_passwordField_id"
            android:drawableStart="@drawable/ic_lock_open_black_24dp"
            android:onClick="resetPasswordEmail"
            android:text="@string/login_passwordDimenticata_description_text"
            android:textColor="@color/neroPiscacchia" />

        <TextView
            android:id="@+id/login_noAccount_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_ricordami_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/login_noAccount_description_text"
            android:textColor="@color/neroPiscacchia" />

        <TextView
            android:id="@+id/login_registrati_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/login_noAccount_id"
            android:layout_toEndOf="@id/login_noAccount_id"
            android:onClick="goToSignup"
            android:text="@string/login_registrati_description_text"
            android:textColor="@color/gialloPiscacchia" />

        <Button
            android:id="@+id/login_accedi_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_noAccount_id"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_login_register"
            android:onClick="login"
            android:padding="15dp"
            android:text="@string/login_accedi_button_description_text"
            android:textColor="@color/bluPiscacchia" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/login_accedi_google_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_accedi_button_id"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>



